<%= link_to 'New post', new_post_path %>

<% @posts.each do |post| %>
	<h1> <%= post.title %></h1>
	<h3> <%= post.author %> </h3>
	<p> <%= post.content %> </p>
	<p><%= link_to 'Show', post_path(post.id) %></p>
	<p><%= link_to 'Edit', edit_post_path(post.id) %></p>
	<p><%= link_to 'Delete', post, method: :delete %></p>
<% end %>
